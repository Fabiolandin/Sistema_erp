<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>
<div class="container">
    <hr>
    <div class="card">
        <div class="card-header">
            <h2> Cadastro de Produto</h2>
        </div>
    <div class="card-boy">
    <form method="POST" action="/produtos/save">
        <br>
        <h4>Nome do produto:</h4>
        <input class="form-control" type="text" name="name" placeholder="Defina o nome do Produto"><br>

        <h4>Descrição do produto:</h4>
        <input class="form-control" type="text" name="description" placeholder="Digite a descrição do produto"><br>

        <h4>Valor do produto:</h4>
        <input class="form-control" type="number" step="0.01" name="value" placeholder="Digite o valor do produto"><br>

        <label>Marca</label>
        <select name="marca" class="form-control">
            <% marca.forEach((marca) => { %>
                <option value="<%= marca.id %>"><%= marca.name %></option>
            <% }) %>
        </select>
        <button class="btn btn-success">Cadastrar</button>



            </form>
        </div>
    </div>
</div>
<%- include('../../partials/footer.ejs') %> 