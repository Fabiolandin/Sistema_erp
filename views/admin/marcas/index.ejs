<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>
<div class="container">
    <hr>
    <h2>Marcas</h2>
    <a class="btn btn-success" href="/admin/marcas/new">Criar nova categoria</a>
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Slug</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% marcas.forEach(marcas => { %>
            <tr>
                    <th><%= marcas.id %></th>
                    <th><%= marcas.name %></th>
                    <th><%= marcas.slug %></th>
                    <th>
                        <button class="btn btn-warning">Editar</button>
                        <button class="btn btn-danger">Deletar</button>
                    </th>
            </tr>
              <%  })%>
        </tbody>
    </table>
</div>

<%- include('../../partials/footer.ejs') %> 